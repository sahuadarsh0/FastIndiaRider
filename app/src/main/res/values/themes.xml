<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FastIndiaRider" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/yellow</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/yellow</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.FastIndiaRider.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FastIndiaRider.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FastIndiaRider.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/yellow</item>
    </style>

    <style name="TextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextBlack">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextGrey">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextYellow">
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textAllCaps">true</item>

    </style>

    <style name="TextWhite">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="TexInputStyle">
        <item name="android:textSize">17sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="color">@color/black</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:elevation">3dp</item>
    </style>

    <style name="ButtonStyle.large">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="ButtonStyle.small">
        <item name="android:padding">5dp</item>
        <item name="android:textSize">12sp</item>
        <item name="cornerRadius">5dp</item>
    </style>

    <style name="ButtonStyle.small.yellow">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/yellow</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <style name="ButtonStyle.small.red">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/red</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <style name="ButtonStyle.small.green">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/green</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <style name="ButtonStyle.large.yellow">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/yellow</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <color name="grey">#949494</color>
</resources>